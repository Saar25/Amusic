<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.Card?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<Card xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.saartako.client.controllers.SongController"
      maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
      styleClass="elevated-1, interactive">
    <body>
        <Pane fx:id="cardBodyPane"
              style="-fx-background-color: #d95656; -fx-background-radius: 4 4 0 0"
              prefHeight="200" prefWidth="200">
            <Label fx:id="songNameLabel" styleClass="title-2"/>
        </Pane>
    </body>
    <footer>
        <VBox fx:id="footerVBox"/>
    </footer>
</Card>