<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="20"
      fx:controller="org.saartako.client.controllers.LoginController">
    <!-- Title -->
    <Label text="Amusic" style="-fx-font-size: 36; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="20">
        <!-- Login Form -->
        <GridPane fx:id="formGrid" hgap="10" vgap="15" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="NEVER"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
            <children>
                <!-- Username -->
                <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="usernameField" promptText="Value" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <!-- Password -->
                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <PasswordTextField fx:id="passwordField" promptText="Value" GridPane.rowIndex="1"
                                   GridPane.columnIndex="1"/>

                <!-- Display Name -->
                <Label fx:id="displayNameLabel" text="Display Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       visible="false" managed="false"/>
                <TextField fx:id="displayNameField" promptText="Value" GridPane.rowIndex="2" GridPane.columnIndex="1"
                           visible="false" managed="false"/>

                <Button fx:id="loginButton"
                        styleClass="accent"
                        maxWidth="1.7976931348623157E308"
                        GridPane.rowIndex="3"
                        GridPane.columnIndex="0"
                        GridPane.columnSpan="2"/>

                <VBox spacing="10" maxHeight="1.7976931348623157E308" GridPane.rowIndex="0" GridPane.rowSpan="3"
                      GridPane.columnIndex="2" alignment="CENTER">
                    <Label fx:id="loginMethodLabel"/>
                    <ToggleSwitch fx:id="loginMethodSwitch" selected="true"/>
                </VBox>
            </children>
        </GridPane>
    </HBox>
</VBox>
