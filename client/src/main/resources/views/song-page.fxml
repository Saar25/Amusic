<?xml version="1.0" encoding="UTF-8"?>

<?import atlantafx.base.controls.CustomTextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<ScrollPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.saartako.client.controllers.SongsPageController"
            fitToWidth="true" fitToHeight="true">
    <padding>
        <Insets bottom="8" left="40" right="40" top="8"/>
    </padding>
    <VBox spacing="20" alignment="TOP_CENTER">
        <CustomTextField fx:id="searchTextField" promptText="Search" maxWidth="300">
            <left>
                <FontIcon iconLiteral="mdmz-search"/>
            </left>
            <right>
                <FontIcon iconLiteral="mdal-clear"/>
            </right>
        </CustomTextField>
        <GridPane fx:id="songsGridPane" alignment="CENTER" vgap="16" hgap="16">
            <columnConstraints>
                <ColumnConstraints percentWidth="33.333333333" halignment="CENTER"/>
                <ColumnConstraints percentWidth="33.333333333" halignment="CENTER"/>
                <ColumnConstraints percentWidth="33.333333333" halignment="CENTER"/>
            </columnConstraints>
        </GridPane>
    </VBox>
</ScrollPane>
